<Window x:Name="wndReport" x:Class="PassingDataAround.wndEmployeeReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Report" Height="441" Width="581">
    <Grid>
        <Button x:Name="cmdCreateReport" Content="Generate Report" HorizontalAlignment="Left" Margin="40,26,0,0" VerticalAlignment="Top" Width="125" Height="42" Click="cmdCreateReport_Click"/>
        <TextBox x:Name="txtReport" HorizontalAlignment="Left" Height="245" Margin="40,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
        <Button x:Name="cmdCreateStaticReport" Content="Generate Static Report" HorizontalAlignment="Left" Margin="314,26,0,0" VerticalAlignment="Top" Width="135" Height="42" Click="cmdCreateStaticReport_Click"/>
        <TextBox x:Name="txtStaticReport" HorizontalAlignment="Left" Height="245" Margin="314,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>

    </Grid>
</Window>
